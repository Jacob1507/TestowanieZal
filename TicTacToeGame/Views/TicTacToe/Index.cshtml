@model TicTacToeGame.Models.TicTacToe

@{
    ViewData["Title"] = "Tic Tac Toe";
}

<h2>Tic Tac Toe</h2>

@if (ViewBag.Winner != null)
{
    <div class="alert alert-success">
        @ViewBag.Winner
    </div>
}

<table class="table table-bordered">
    @for (int i = 0; i < 3; i++)
    {
        <tr>
            @for (int j = 0; j < 3; j++)
            {
                int index = i * 3 + j;
                <td data-symbol="@ViewBag.CurrentPlayer">
                    <form asp-action="MakeMove" asp-controller="TicTacToe" method="post" style="width: 100%; height: 100%; position: relative;">
                        <input type="hidden" name="index" value="@index" />
                        <button type="submit" class="btn btn-link">
                            @Model.Board[index]
                        </button>
                    </form>
                </td>
            }
        </tr>
    }
</table>

<script>
    document.querySelectorAll('td[data-symbol]').forEach(td => {
        td.addEventListener('mouseover', function () {
            if (this.querySelector('button').textContent.trim() === '') {
                this.setAttribute('data-symbol', '@ViewBag.CurrentPlayer');
            }
        });

        td.addEventListener('mouseout', function () {
            this.setAttribute('data-symbol', '');
        });
    });
</script>
