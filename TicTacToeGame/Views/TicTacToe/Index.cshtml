@model TicTacToeGame.Models.TicTacToe

@{
    ViewData["Title"] = "Tic Tac Toe";
}

<h2>Tic Tac Toe</h2>

@if (ViewBag.Winner != null)
{
    <div class="alert alert-success">
        Player @ViewBag.Winner has won!
    </div>
}

<table class="table table-bordered" style="width: 200px; height: 200px;">
    @for (int i = 0; i < 3; i++)
    {
        <tr>
            @for (int j = 0; j < 3; j++)
            {
                int index = i * 3 + j;
                <td style="text-align: center;">
                    <form asp-action="MakeMove" asp-controller="TicTacToe" method="post">
                        <input type="hidden" name="index" value="@index" />
                        <button type="submit" class="btn btn-link" style="width: 100%; height: 100%; font-size: 24px;">
                            @Model.Board[index]
                        </button>
                    </form>
                </td>
            }
        </tr>
    }
    }
</table>
